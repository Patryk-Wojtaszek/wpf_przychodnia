        <TextBox x:Name="txt_nazwisko_2" HorizontalAlignment="Left" Height="23" Margin="485,374,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="155" RenderTransformOrigin="-0.36,-0.488"/>
