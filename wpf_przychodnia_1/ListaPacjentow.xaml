        <Label Content="Imię" HorizontalAlignment="Left" Margin="423,343,0,0" VerticalAlignment="Top" Width="129" RenderTransformOrigin="0.501,3.694"/>
        <Label Content="Naziwsko" HorizontalAlignment="Left" Margin="421,374,0,0" VerticalAlignment="Top" Width="129"/>
        <Label Content="PESEL" HorizontalAlignment="Left" Margin="421,400,0,0" VerticalAlignment="Top" Width="129" RenderTransformOrigin="0.501,-0.697"/>
